<!-- Blue Box / Row -->
<div class="blue_box blue_box_posts tabs_box">

  <!-- Tabs Menu -->
  <ul class="tabs_menu">
    <li class="current"><a href="#tab_latest_news">{{ 'global.latestNews.title'|trans|desc('Latest news') }}</a></li>

  </ul>
  <!-- End Tabs Menu -->

  <!-- Tabs Contents -->
  <div class="tabs_contents">
    <!-- Tabs Content -->
    <div id="tab_latest_news" class="tabs_content row" style="display: block;">

{% gimmelist article from articles with {'route': '/news'}  %}
{% if loop.index < 5 %}
      <div class="span3">
        <article class="news_item condensed">
          <a href="{{ url(article) }}" class="thumbnail"><img src="{% if loop.index == 1 %}{{ asset('theme/assets/img/img-recent1.jpg') }}{% elseif loop.index == 2 %}{{ asset('theme/assets/img/img-recent2.jpg') }}{% elseif loop.index == 3 %}{{ asset('theme/assets/img/img-recent3.jpg') }}{% elseif loop.index == 4 %}{{ asset('theme/assets/img/img-recent4.jpg') }}{% endif %}" alt="Candidates (photo: Source FabriÄ‡)"></a>
          <div class="content content_text content_text_contrast">
            <h6 class="info">{{ random(['Frank N. Stein', 'Lisa Staffwrighter', 'Desmond Tutu', 'Donald Duck', 'John Smith', 'Tasha Kan']) }} - {{ article.publishedAt|date("d.m.Y, H:i") }}</h6>
            <h3 class="title"><a href="{{ url(article) }}">{{ article.title }}</a></h3>
            <p>{{ article.body|truncate(50,true) }}</p>
         </div>
       </article>
   </div>
{% endif %}
{% endgimmelist %}

      </div>
      <!-- End Tabs Content -->

      </div><!-- End Tabs Contents -->
    </div><!-- End Blue Box / Row -->

